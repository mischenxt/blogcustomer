<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>blogsCustomer</display-name>
    <listener>
        <listener-class>listener.ContextInitial</listener-class>
    </listener>
    <servlet>
        <servlet-name>addComment</servlet-name>
        <servlet-class>controller.AddCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>smartList</servlet-name>
        <servlet-class>controller.ShowSmartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showArticle</servlet-name>
        <servlet-class>controller.ShowArticleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showIndex</servlet-name>
        <servlet-class>controller.ShowIndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showList</servlet-name>
        <servlet-class>controller.ShowListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>controller.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showreg</servlet-name>
        <servlet-class>controller.ShowRegServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>addComment</servlet-name>
        <url-pattern>/addComment.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>smartList</servlet-name>
        <url-pattern>/smartList.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showArticle</servlet-name>
        <url-pattern>/showArticle.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showIndex</servlet-name>
        <url-pattern>/showIndex.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showList</servlet-name>
        <url-pattern>/showList.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showreg</servlet-name>
        <url-pattern>/showreg.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>